<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>

<h1>All Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
        <%= link_to "(delete)", tag_path(tag),
            method: :delete,
            data: {confirm: "Really delete this tag?"} %>
      <% end %>
    </li>
  <% end %>
</ul>
<br />

<%= link_to "<< Back to Articles List", articles_path %>
