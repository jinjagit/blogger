<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p style="font-size: 12px">Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <p id="body_text" class="comment"><%= comment.body %></p>
  <% if current_user and current_user.username == "admin"  %>
    <%= link_to "Delete", article_comment_path(comment.article, comment),
      method: :delete,
      data: {confirm: "Really delete this comment?"} %>
  <% end %>
</div>
